    "props": {
      "blockClass": "summary",
      "message": "de {listPriceValue}"
    }
  },
  "product-spot-price-savings": {
    "props": {
      "blockClass": "summary",
      "message": "OU {newSpotPriceValue} À VISTA  NO BOLETO (3% DE DESCONTO)"
    }
  },
